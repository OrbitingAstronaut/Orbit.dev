---
import { Astro } from "@astro/types";
export interface Props {
    title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="https://i.imgur.com/a3qzKxN.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="About me" />
    <meta content="Orbit" property="og:title" />
    <meta content="About me" property="og:description" />
    <meta content="O4bit.mywire.org" property="og:url" />
    <meta content="#ba132d" data-react-helmet="true" name="theme-color" />
    <title>{title}</title>
    <link rel="me" href="https://floss.social/@O4bit">
    <style>
        body {
            margin: 0; /* Remove default margin */
            font-family: Arial, sans-serif; /* Optional: Set your preferred font */
            background-color: #111; /* Dark mode background color */
            color: #fff; /* Text color for dark mode */
            overflow: hidden; /* Prevent scrolling */
            position: relative;
            height: 100vh;
        }
        .background-video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
            opacity: 0.8; /* Adjust transparency */
        }
        /* Adjust iframe styles */
        iframe {
            position: fixed;
            bottom: 20px;
            right: 20px;
            border: none;
            overflow: hidden;
            z-index: 9999;
        }
    </style>
</head>
<body>
    <video class="background-video" autoplay loop muted>
        <source src="https://i.imgur.com/IO4YkM8.mp4" type="video/mp4" />
        Your browser does not support the video tag.
    </video>
    <slot />
</body>
</html>
