---
import { Image } from 'astro:assets';
import logoGif from '../public/ezgif-7-2eaf8a8b05.gif';
---

<div class="left-2 fixed top-0 h-9 w-9 m-1 rounded-full drop-shadow-lg">
    <Image
        src={logoGif}
        alt="Orbit Logo"
        class="rounded-full"
        height="36"
        width="36"
        loading="eager"
    />
    <span class="text-1xl relative m-2 left-[50px] bottom-[30px] font-medium">
        Orbit
    </span>
</div>